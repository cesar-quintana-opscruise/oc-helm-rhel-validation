{
    "$schema": "https://json-schema.org/draft-07/schema",
    "properties": {
        "tags": {
            "type": "object",
            "properties": {
                "opscruise": {
                    "type": "boolean"
                },
                "collectors": {
                    "type": "boolean"
                }
            }
        },
        "global": {
            "type": "object",
            "properties": {
                "opscruiseChartVersion": {
                    "type": "string"
                },
                "externalCadvisor": {
                    "type": "boolean"
                },
                "prometheusScrapeInterval": {
                    "type": "integer"
                },
                "nodeExporterPort": {
                    "type": "integer"
                },
                "k8sClusterFqdn": {
                    "type": "string"
                },
                "awsCredentials": {
                    "type": "object",
                    "properties": {
                        "regions": {
                            "type": "array",
                            "items": {
                                "type": [
                                    "string"
                                ]
                            }
                        },
                        "aws_access_key_id": {
                            "type": "string"
                        },
                        "aws_secret_access_key": {
                            "type": "string"
                        },
                        "roleArn": {
                            "type": "string"
                        }
                    }
                },
                "gatewayCreds": {
                    "type": "object",
                    "properties": {
                        "environment": {
                            "type": "object",
                            "required": [
                                "DOCKER_SERVER",
                                "DOCKER_USERNAME",
                                "DOCKER_PASSWORD"
                            ],
                            "properties": {
                                "DOCKER_SERVER": {
                                    "type": "string"
                                },
                                "DOCKER_USERNAME": {
                                    "type": "string"
                                },
                                "DOCKER_PASSWORD": {
                                    "type": "string"
                                },
                                "DOCKER_EMAIL": {
                                    "type": "string"
                                },
                                "OPSCRUISE_ENDPOINT": {
                                    "type": "string"
                                },
                                "KEYCLOAK_ENABLED": {
                                    "type": "string"
                                },
                                "KEYCLOAK_URL": {
                                    "type": "string"
                                },
                                "KEYCLOAK_CLIENT_ID": {
                                    "type": "string"
                                },
                                "KEYCLOAK_CLIENT_SECRET": {
                                    "type": "string"
                                },
                                "KEYCLOAK_REALM": {
                                    "type": "string"
                                },
                                "OPSCRUISE_ACCOUNT_ID": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "hostAliases": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "properties": {
                            "hostnames": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "ip": {
                                "type": "string"
                            }
                        }
                    }
                },
                "tolerations": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "effect": {
                                "type": "string"
                            },
                            "operator": {
                                "type": "string"
                            }
                        }
                    }
                },
                "namespaceFiltering": {
                    "type": "object",
                    "properties": {
                        "namespaceAllowList": {
                            "type": [
                                "array",
                                "null"
                            ],
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "daemonsetTolerations": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "effect": {
                                "type": "string"
                            },
                            "operator": {
                                "type": "string"
                            }
                        }
                    }
                },
                "affinity": {
                    "type": "object",
                    "properties": {
                        "nodeAffinity": {
                            "type": "object",
                            "properties": {
                                "preferredDuringSchedulingIgnoredDuringExecution": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "preference": {
                                                "type": "object",
                                                "properties": {
                                                    "matchExpressions": {
                                                        "type": "array",
                                                        "items": {
                                                            "properties": {
                                                                "key": {
                                                                    "type": "string"
                                                                },
                                                                "operator": {
                                                                    "type": "string"
                                                                },
                                                                "values": {
                                                                    "type": "array",
                                                                    "items": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            },
                                            "weight": {
                                                "type": "integer"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "title": "Values",
    "type": "object"
}